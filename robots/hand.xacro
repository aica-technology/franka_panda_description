<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="hand">
  <xacro:macro name="hand"
               params="prefix:='panda_' connected_to:='' rpy:='0 0 0' xyz:='0 0 0' fix_finger_joints=false insert_grasp_frame:=false">

    <xacro:unless value="${connected_to == ''}">
      <joint name="${prefix}hand_joint" type="fixed">
        <parent link="${connected_to}"/>
        <child link="${prefix}hand"/>
        <origin xyz="${xyz}" rpy="${rpy}"/>
      </joint>
    </xacro:unless>
    <link name="${prefix}hand">
      <visual>
        <geometry>
          <mesh filename="package://franka_panda_description/meshes/visual/hand.dae"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://franka_panda_description/meshes/collision/hand.stl"/>
        </geometry>
      </collision>
      <inertial>
        <origin rpy="0 0 0" xyz="0 0.0015244 0.0275912"/>
        <mass value="0.73"/>
        <inertia ixx="0.00278560230025" ixy="0.0" ixz="0.0" iyy="0.000400033405336" iyz="0.0" izz="0.00256378041832"/>
      </inertial>
    </link>
    <link name="${prefix}leftfinger">
      <visual>
        <geometry>
          <mesh filename="package://franka_panda_description/meshes/visual/finger.dae"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://franka_panda_description/meshes/collision/finger.stl"/>
        </geometry>
      </collision>
      <inertial>
        <origin rpy="0 0 0" xyz="0 0.0145644 0.0227941"/>
        <mass value="0.1"/>
        <inertia ixx="3.01220925051e-05" ixy="0.0" ixz="0.0" iyy="2.95873808038e-05" iyz="0.0" izz="6.95125211657e-06"/>
      </inertial>
    </link>
    <link name="${prefix}rightfinger">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 ${pi}"/>
        <geometry>
          <mesh filename="package://franka_panda_description/meshes/visual/finger.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 ${pi}"/>
        <geometry>
          <mesh filename="package://franka_panda_description/meshes/collision/finger.stl"/>
        </geometry>
      </collision>
      <inertial>
        <origin rpy="0 0 3.141592653589793" xyz="0 -0.0145644 0.0227941"/>
        <mass value="0.1"/>
        <inertia ixx="3.01220925051e-05" ixy="0.0" ixz="0.0" iyy="2.95873808038e-05" iyz="0.0" izz="6.95125211657e-06"/>
      </inertial>
    </link>
    <xacro:unless value="${fix_finger_joints}">
      <joint name="${prefix}finger_joint1" type="prismatic">
        <parent link="${prefix}hand"/>
        <child link="${prefix}leftfinger"/>
        <origin xyz="0 0 0.0584" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit effort="20" lower="0.0" upper="0.04" velocity="0.2"/>
        <dynamics damping="500.0" friction="0.0"/>
      </joint>
      <joint name="${prefix}finger_joint2" type="prismatic">
        <parent link="${prefix}hand"/>
        <child link="${prefix}rightfinger"/>
        <origin xyz="0 0 0.0584" rpy="0 0 0"/>
        <axis xyz="0 -1 0"/>
        <limit effort="20" lower="0.0" upper="0.04" velocity="0.2"/>
        <dynamics damping="500.0" friction="0.0"/>
        <mimic joint="${prefix}finger_joint1"/>
      </joint>
    </xacro:unless>
    <xacro:if value="${fix_finger_joints}">
      <joint name="${prefix}finger_joint1" type="fixed">
        <parent link="${prefix}hand"/>
        <child link="${prefix}leftfinger"/>
        <origin xyz="0 0.04 0.0584" rpy="0 0 0"/>
      </joint>
      <joint name="${prefix}finger_joint2" type="fixed">
        <parent link="${prefix}hand"/>
        <child link="${prefix}rightfinger"/>
        <origin xyz="0 -0.04 0.0584" rpy="0 0 0"/>
      </joint>
    </xacro:if>
    <xacro:if value="${insert_grasp_frame}">
      <joint name="${prefix}_grasp_frame" type="fixed">
        <parent link="${prefix}hand"/>
        <child link="${prefix}hand_grasp"/>
        <origin xyz="0 0 0.1034" rpy="0 0 0"/>
      </joint>
      <link name="${prefix}hand_grasp"/>
    </xacro:if>
  </xacro:macro>
</robot>
